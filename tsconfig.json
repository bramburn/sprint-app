{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "ES2022",
		"lib": [
			"ES2022",
			"DOM"
		],
		"jsx": "react-jsx",
		"sourceMap": true,
		"rootDirs": [
			"src",
			"shared"
		],
		"strict": true,
		"types": [
			"node",
			"vscode"
		],
		"paths": {
			"@shared/*": [
				"./shared/*"
			],
			"@sprint-app/shared": [
				"./shared/dist"
			],
			"@webview/*": [
				"./webview-ui/src/*"
			],
			"@sidebar/*": [
				"./webview-sidebar/src/*"
			],
			"@extension/*": [
				"./src/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./node_modules/vscode/vscode.d.ts",
		
		]
	},
	"include": [
		"src/**/*",
		"shared/**/*",
		"webview-ui/src/**/*",
		"webview-sidebar/src/**/*"
	]
}