{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"lib": [
			"ES2022",
			"DOM"
		],
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"resolveJsonModule": true,
		"sourceMap": true,
		"rootDirs": [
			"src"
		],
		"paths": {
			"@shared/*": [
				"./shared/*"
			],
			"@sprint-app/shared": [
				"./shared/dist"
			],
			"@sprint-app/shared/*": [
				"shared/src/*"
			],
			"@sprint-app/shared": [
				"shared/src/index"
			],
			"@sprint-app/webview-settings/*": [
				"webview-settings/src/*"
			],
			"@sprint-app/webview-settings": [
				"webview-settings/src/index"
			],
			"@sprint-app/webview-sidebar/*": [
				"webview-sidebar/src/*"
			],
			"@sprint-app/webview-sidebar": [
				"webview-sidebar/src/index"
			],
			"@webview/*": [
				"./webview-ui/src/*"
			],
			"@sidebar/*": [
				"./webview-sidebar/src/*"
			],
			"@extension/*": [
				"./src/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./node_modules/vscode/vscode.d.ts"
		],
		"types": [
			"vitest/globals",
			"node",
			"vscode"
		]
	},
	"files": [],
	"references": [
		{ "path": "./shared" },
		{ "path": "./webview-settings" },
		{ "path": "./webview-sidebar" }
	],
	"include": [
		"src/**/*",
		"webview-ui/src/**/*",
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/out",
		"**/dist"
	]
}