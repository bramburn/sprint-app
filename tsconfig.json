{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"lib": [
			"es2020"
		],
		"declaration": true,
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"types": [
			"node", 
			"vscode",
			"vitest/importMeta"
		],
		"sourceMap": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@shared/*": ["src/shared/*"],
			"rxjs": ["node_modules/rxjs"]
		},
		"composite": true
	},
	"include": [
		"src/**/*.ts",
		"src/tests/**/*.ts",
		"shared/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"webview-ui/**/*",
		"dist"
	]
}
