{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "./out",
		"strict": true, /* enable all strict type-checking options */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules",
		"dist",
		".vscode",
		"out",
		"coverage",
		"webview-ui",
		"**/__mocks__",

		"vite.config.ts",
		"**/*.test.ts", // Exclude all test files ending with .test.ts
		"**/*.spec.ts", // Exclude all test files ending with .spec.ts
		"src/test" // Exclude the entire test directory (if applicable)
	],
	"overrides": [
		{
			"files": [
				"**/test/**/*.test.ts"
			],
			"compilerOptions": {
				"strict": false,
				"noImplicitAny": false,
				"strictNullChecks": false,
				"strictFunctionTypes": false,
				"strictBindCallApply": false,
				"strictPropertyInitialization": false
			}
		}
	]
}