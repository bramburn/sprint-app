{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "./out",
		"strict": true,   /* enable all strict type-checking options */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules",
		"dist",
		".vscode",
		"out",
		"coverage",
		"webview-ui"
	]
}
