{
  "name": "sprint-app",
  "displayName": "Sprint App",
  "version": "0.0.1",
  "publisher": "sprint-ai",
  "description": "Sprint App VSCode Extension",
  "engines": {
    "vscode": "^1.74.0"
  },
  "workspaces": [
    "shared",
    "webview-settings",
    "webview-sidebar"
  ],
  "scripts": {
    "clean": "node -e \"const fs = require('fs'); if (fs.existsSync('dist')) fs.rmSync('dist', { recursive: true });\"",
    "prebuild": "npm run clean",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "build": "npm run build:workspaces",
    "build:workspaces": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=@sprint-app/shared",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "test": "npm run test --workspaces",
    "test:watch": "vitest",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "npm run check-types --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sprint-sidebar",
          "title": "Sprint App",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "sprint-sidebar": [
        {
          "type": "webview",
          "id": "sprint-sidebar-view",
          "name": "Sprint App",
          "icon": "media/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "sprint-ai.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "sprint-ai.showWebview",
        "title": "Show Webview"
      }
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^20.11.5",
    "@types/vscode": "^1.96.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "concurrently": "^9.1.2",
    "esbuild": "^0.24.2",
    "eslint": "^9.16.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-vitest": "^0.5.4",
    "esquery": "^1.6.0",
    "npm-run-all": "^4.1.5",
    "standard-version": "^9.5.0",
    "typescript": "^5.7.3",
    "vite": "^5.0.6",
    "vitest": "^1.4.0",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "rxjs": "^7.8.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
