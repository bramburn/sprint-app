{
  "name": "sprint-app",
  "displayName": "Sprint App",
  "description": "many things",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:sprint-sidebar-view",
    "onCommand:sprint-ai.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sprint-sidebar",
          "title": "Sprint App",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "sprint-sidebar": [
        {
          "type": "webview",
          "id": "sprint-sidebar-view",
          "name": "Sprint App",
          "icon": "media/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "sprint-ai.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "clean": "node -e \"const fs = require('fs'); if (fs.existsSync('out')) fs.rmSync('out', { recursive: true });\"",
    "prebuild": "npm run clean",
    "build": "tsc --project ./tsconfig.json",
    "build:watch": "tsc --watch --project ./tsconfig.json",
    "vscode:prepublish": "npm run build && npm run build:webview",
    "compile": "tsc -p ./",
    "watch": "concurrently \"npm:watch:extension\" \"npm:watch:webview\"",
    "watch:extension": "tsc -watch -p ./",
    "watch:webview": "cd webview-ui && npm run dev",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "build:extension": "npm run compile",
    "build:webview": "cd webview-ui && npm run build"
  },
  "devDependencies": {
    "@types/node": "^22.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "concurrently": "^9.1.2",
    "esbuild": "^0.24.2",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-vitest": "^0.5.4",
    "npm-run-all": "^4.1.5",
    "standard-version": "^9.5.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "rxjs": "^7.8.1"
  }
}
