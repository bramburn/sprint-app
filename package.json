{
  "name": "sprint-app",
  "displayName": "Sprint App",
  "description": "many things",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:sprint-sidebar-view",
    "onCommand:sprint-ai.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sprint-sidebar",
          "title": "Sprint App",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "sprint-sidebar": [
        {
          "type": "webview",
          "id": "sprint-sidebar-view",
          "name": "Sprint App",
          "icon": "media/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "sprint-ai.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "clean": "rimraf out",
    "prebuild": "npm run clean",
    "build": "tsc --project ./tsconfig.json",
    "build:watch": "tsc --watch --project ./tsconfig.json",
    "vscode:prepublish": "npm run build && npm run build:webview",
    "compile": "tsc -p ./",
    "watch": "concurrently \"npm:watch:extension\" \"npm:watch:webview\"",
    "watch:extension": "tsc -watch -p ./",
    "watch:webview": "cd webview-ui && npm run dev",
    "pretest": "npm run build && npm run lint",
    "lint": "node --max-old-space-size=4096 ./node_modules/.bin/eslint src --ext ts,tsx --cache",
    "lint:fix": "node --max-old-space-size=4096 ./node_modules/.bin/eslint src --ext ts,tsx --fix --cache",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "build:extension": "npm run compile",
    "build:webview": "cd webview-ui && npm run build",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch"
  },
  "devDependencies": {
    "@types/node": "^22.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "concurrently": "^9.1.2",
    "esbuild": "^0.24.2",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-vitest": "^0.5.4",
    "lint-staged": "^15.3.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "standard-version": "^9.5.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "rxjs": "^7.8.1"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "vitest run"
    ],
    "webview-ui/src/**/*.{ts,tsx}": [
      "eslint --fix",
      "vitest run"
    ]
  }
}
