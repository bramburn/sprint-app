{
  "name": "sprint-app",
  "displayName": "Sprint App",
  "version": "0.0.1",
  "description": "Sprint App VSCode Extension",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:sprint-sidebar-view"
  ],
  "main": "out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sprint-sidebar",
          "title": "Sprint App",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "activitybar": [
        {
          "type": "webview",
          "id": "sprint-sidebar-view",
          "name": "Sprint App",
          "icon": "media/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "sprint-ai.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "clean": "node --max-old-space-size=4096 -e \"const fs = require('fs'); if (fs.existsSync('out')) fs.rmSync('out', { recursive: true });\"",
    "prebuild": "npm run clean",
    "build": "node --max-old-space-size=4096 node_modules/typescript/lib/tsc.js --project ./tsconfig.json",
    "build:watch": "node --max-old-space-size=4096 tsc --watch --project ./tsconfig.json",
    "vscode:prepublish": "npm run build && npm run build:webview",
    "compile": "node --max-old-space-size=4096 tsc -p ./",
    "watch": "concurrently \"npm:watch:extension\" \"npm:watch:webview\"",
    "watch:extension": "node --max-old-space-size=4096 tsc -watch -p ./",
    "watch:webview": "cd webview-ui && npm run dev",
    "pretest": "npm run build",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "test": "vitest run --passWithNoTests",
    "test:watch": "node --max-old-space-size=4096 vitest watch",
    "test:ui": "node --max-old-space-size=4096 vitest --ui",
    "test:coverage": "node --max-old-space-size=4096 vitest run --coverage",
    "build:extension": "npm run compile",
    "build:webview": "cd webview-ui && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "concurrently": "^9.1.2",
    "esbuild": "^0.24.2",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-vitest": "^0.5.4",
    "esquery": "^1.6.0",
    "npm-run-all": "^4.1.5",
    "standard-version": "^9.5.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.6",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "rxjs": "^7.8.1"
  }
}
