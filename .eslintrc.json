{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "out/",
        "coverage/",
        ".vscode-test/",
        "webview-ui/dist/",
        "webview-ui/out/",
        "webview-ui/coverage/",
        "**/*.test.ts",
        "**/*.test.tsx"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": [
            "warn",
            {
                "selector": "import",
                "format": ["camelCase", "PascalCase"]
            }
        ],
        "curly": "warn",
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "warn"
    },
    "overrides": [
        {
            "files": ["webview-ui/**/*.ts", "webview-ui/**/*.tsx"],
            "rules": {
                "react/react-in-jsx-scope": "off"
            }
        }
    ]
}